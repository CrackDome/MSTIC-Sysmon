<!--
    Arecord: It is a command-line soundfile recorder for the ALSA soundcard driver. It supports several file formats and multiple soundcards with multiple devices.

    Reference:
    - https://github.com/SigmaHQ/sigma/blob/master/rules/linux/auditd/lnx_auditd_audio_capture.yml
    - https://linux.die.net/man/1/arecord
-->
<Sysmon schemaversion="4.81">
  <HashAlgorithms>*</HashAlgorithms>
  <EventFiltering>
    <RuleGroup name="" groupRelation="or">
      <ProcessCreate onmatch="include">
        <Rule name="" groupRelation="and">
            <Image condition="is">/usr/bin/aplay</Image>
            <CommandLine condition="contains">arecord</CommandLine>
        </Rule>
      </ProcessCreate>
    </RuleGroup>
  </EventFiltering>
</Sysmon>
